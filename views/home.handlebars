{{!-- Renders all existing blog posts --}}
<style>
    a {
        display:block;
    }
    * {
        margin: 0;
        padding: 0;
        color: black; 
        text-decoration: none;
    }

    a:link { text-decoration: none; }
    a:visited { text-decoration: none; }
    a:hover { text-decoration: none; }
    a:active { text-decoration: none; }
    .blogCard {
        margin: 10px;
        padding: 5px;
        border: 3px black solid;
        border-radius: 10px;
    }
    h2 {
        text-align: center;
    }
    
    h3 {
        margin-bottom: 0;
    }
    .blogCard {
        text-align: center;
    }
    .blogHeader {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px;
        border-radius: 10px;
        background: lightblue;
    }
    p {
        margin-top: 0;
        margin-bottom: 0;
    }
    .footerText {
        font-size: smaller;
    }
</style>

<h2>Home Page</h2>
{{#each blogs as |blog|}}
<div class="blogCard">
    <a href="/blog/{{blog.id}}">
        <div class="blogHeader">
            <h3>{{blog.title}}</h3>
        </div>
        <p>{{blog.content}}</p>
        <p class="footerText">Created by {{user.username}} on {{ format_date blog.date_created}}</p> 
    </a>
</div>
{{/each}}

