<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>

</div>
<div class="commentSection">
  <h4>There are {{comments.length}} comments on this blog.</h4>
  {{#each comments as |comment|}}
  <h6>{{comment.user.username}}:</h6>
  <p>{{comment.content}}</p>
  <p class="footerText">{{format_date comment.createdAt}}</p>
  {{/each}}
</div>
{{#if logged_in}}
<div class="form-group">
  <textarea data-id="{{id}}" class="commentSection" id="comment{{id}}" name="blog-content"></textarea>
</div>
  <button type="submit" data-id="{{id}}" id="commentButton" class="btn btn-primary commentSection">Add Comment</button>
{{else}}
  <p> <a href="/login">Login to leave a comment</a></p>
{{/if}}

<script src="/js/blog.js"></script>