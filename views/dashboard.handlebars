<style>
    * {
        margin: 0;
        padding: 0;
        color: black; 
        text-decoration: none;
    }
    .blogCard {
        margin: 10px;
        padding: 5px;
        border: 3px black solid;
        border-radius: 10px;
    }
    
    h3 {
        margin-bottom: 0;
    }
    .blogCard {
        text-align: center;
    }
    .blogHeader {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px;
        border-radius: 10px;
        background: lightblue;
    }
    p {
        margin-top: 0;
        margin-bottom: 0;
    }
    .footerText {
        font-size: smaller;
    }
</style>
<h2>Dashboard</h2>

<h4>Hi, {{username}}!</h4>
{{#if blogs.length}}
<h5>You have made {{blogs.length}} posts.</h5>
<a href="#blog-title">Click here to make another blog post</a>
{{else}}
<h5>You haven't made any posts.</h5>
{{/if}}

{{#each blogs as |blog|}}
<div class="blogCard">
    <a href="/blog/{{blog.id}}">
        <div class="blogHeader">
            <h3>{{blog.title}}</h3>
        </div>
        <p>{{blog.content}}</p>
        <p class="footerText">Created by you on {{ format_date blog.date_created}}</p> 
    </a>
        <button class="deletebutton" data-id="{{blog.id}}">Delete Blog</button>
        <button data-id="{{blog.id}}">Update Blog</button>
</div>
{{/each}}

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title: </label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <script src="/js/dashboard.js"></script>